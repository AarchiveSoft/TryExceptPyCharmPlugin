<idea-plugin>
    <id>com.example.tryexceptplugin</id>
    <name>Try Except Plugin</name>
    <version>1.0-SNAPSHOT</version>
    <vendor>My Company</vendor>

    <description>
        A plugin that allows users to add or remove try-except blocks in PyCharm.
    </description>

    <!-- Dependency on Python support in PyCharm -->
    <depends>com.intellij.modules.python</depends>

    <actions>
        <action id="com.example.plugin.RemoveTryExceptAction" class="com.example.plugin.RemoveTryExceptAction" text="Remove Try-Except" description="Remove the try-except block and dedent the code.">
            <add-to-group group-id="EditorPopupMenu" anchor="first"/>
        </action>
        <action id="com.example.plugin.AddTryExceptAction" class="com.example.plugin.AddTryExceptAction" text="Add Try-Except"
                description="Wrap the selected code in try-except block.">
            <add-to-group group-id="EditorPopupMenu" anchor="first"/>
        </action>
    </actions>
</idea-plugin>
