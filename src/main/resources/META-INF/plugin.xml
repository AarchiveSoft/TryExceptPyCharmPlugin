<idea-plugin>
    <id>com.example.tryexceptplugin</id>
    <name>Try Except</name>
    <version>1.0-SNAPSHOT</version>
    <idea-version since-build="241.0" until-build="241.*" />

    <vendor>Softwaare</vendor>

    <description>
        A plugin that allows users to add or remove try-except blocks in PyCharm.
    </description>

    <!-- Dependency on Python support in PyCharm -->
    <depends>com.intellij.modules.python</depends>

    <actions>
        <action id="com.example.plugin.RemoveTryExceptAction" class="com.softwaare.try_except_plugin_v3.RemoveTryExceptAction" text="Remove Try-Except" description="Remove the try-except block and dedent the code.">
            <add-to-group group-id="EditorPopupMenu" anchor="first"/>
        </action>
        <action id="com.example.plugin.AddTryExceptAction" class="com.softwaare.try_except_plugin_v3.AddTryExceptAction" text="Add Try-Except"
                description="Wrap the selected code in try-except block.">
            <add-to-group group-id="EditorPopupMenu" anchor="first"/>
        </action>
    </actions>
</idea-plugin>
